{
  "$schema": "http://json-schema.org/schema",
  "type": "object",
  "properties": {
    "version": {
      "description": "Current schema version.",
      "type": "number"
    },
    "translations": {
      "description": "List of available translations.",
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "code",
          "translators"
        ],
        "properties": {
          "code": {
            "description": "The code for this locale.",
            "type": "string",
            "enum": [
              "ENG_US",
              "CHS_CN",
              "CHT_CN",
              "CZE_CZ",
              "DAN_DK",
              "DUT_NL",
              "FIN_FI",
              "FRE_FR",
              "GER_DE",
              "ITA_IT",
              "JPN_JP",
              "KOR_KR",
              "NOR_NO",
              "POL_PL",
              "POR_BR",
              "RUS_RU",
              "SPA_EA",
              "SWE_SE"
            ]
          },
          "translators": {
            "description": "List of people who contributed to this translation.",
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": [
                "name"
              ],
              "properties": {
                "name": {
                  "description": "Name of translator.",
                  "type": "string"
                },
                "href": {
                  "description": "Optional link to this translator's web page.",
                  "type": "string"
                }
              }
            }
          },
          "outdated": {
            "description": "Whether or not this translation is outdated.",
            "type": "boolean"
          }
        }
      }
    }
  }
}