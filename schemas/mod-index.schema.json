{
  "$schema": "http://json-schema.org/schema",
  "definitions": {
    "modId": {
      "description": "Valid IDs of mods.",
      "type": "string",
      "enum": [
        "bad-translations",
        "buy-bits-and-pieces",
        "followers-for-fame",
        "language-barriers",
        "online-homework",
        "pack-tests",
        "show-sim-info",
        "simway",
        "utter-chaos",
        "bunpocalypse"
      ]
    }
  },
  "type": "object",
  "required": [
    "categories"
  ],
  "properties": {
    "allMods": {
      "description": "A list of all mod IDs. This only exists in the generated build file, and should not be in the source.",
      "type": "array",
      "items": {
        "$ref": "#/definitions/modId"
      }
    },
    "categories": {
      "description": "List of categories to group mods by.",
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "title",
          "modIds"
        ],
        "properties": {
          "title": {
            "description": "Title of this category.",
            "type": "string"
          },
          "modIds": {
            "description": "List of mods in this category.",
            "type": "array",
            "minItems": 1,
            "items": {
              "$ref": "#/definitions/modId"
            }
          }
        }
      }
    },
    "displayData": {
      "description": "Data required for display. This only exists in the generated build file, and should not be in the source. These properties correspond 1:1 with those of the same name in the mod schema.",
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string"
          },
          "featured": {
            "type": "boolean"
          },
          "lastUpdated": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "seoTags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "status": {
            "type": "string"
          },
          "tagline": {
            "type": "string"
          },
          "version": {
            "type": "string"
          }
        }
      }
    }
  }
}