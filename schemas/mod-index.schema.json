{
  "$schema": "http://json-schema.org/schema",
  "definitions": {
    "modId": {
      "description": "Valid IDs of mods.",
      "type": "string",
      "enum": [
        "language-barriers",
        "bad-translations",
        "buy-bits-and-pieces",
        "followers-for-fame",
        "online-homework",
        "utter-chaos",
        "pack-tests",
        "show-sim-info",
        "simway"
      ]
    }
  },
  "type": "object",
  "required": [
    "featured",
    "categories"
  ],
  "properties": {
    "featured": {
      "description": "List of mods to display at the top of the page in larger, more prominent panels.",
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/modId"
      }
    },
    "categories": {
      "description": "List of categories in which to display non-featured mods.",
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "title",
          "text",
          "modIds"
        ],
        "properties": {
          "title": {
            "description": "Title to display above category section.",
            "type": "string"
          },
          "text": {
            "description": "Brief description to display under the title.",
            "type": "string"
          },
          "modIds": {
            "description": "List of mods to display under this category.",
            "type": "array",
            "minItems": 1,
            "items": {
              "$ref": "#/definitions/modId"
            }
          }
        }
      }
    },
    "wips": {
      "description": "List of mods that are currently being worked on.",
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/modId"
      }
    }
  }
}